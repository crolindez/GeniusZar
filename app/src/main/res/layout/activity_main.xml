<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.carlosrolindez.geniuszar.MainActivity">


    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton7"
            android:textOff="7"
            android:textOn="7" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton8"
            android:textOff="8"
            android:textOn="8" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton9"
            android:textOff="9"
            android:textOn="9" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/thirdRow"
        android:layout_alignParentStart="true">

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton4"
            android:textOff="4"
            android:textOn="4" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton5"
            android:textOff="5"
            android:textOn="5" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton6"
            android:textOff="6"
            android:textOn="6" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/secondRow"
        android:layout_alignParentStart="true">

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton1"
            android:textOff="1"
            android:textOn="1" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton2"
            android:textOff="2"
            android:textOn="2" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/toggleButton3"
            android:textOff="3"
            android:textOn="3" />


    </LinearLayout>

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="1"
        android:id="@+id/seekBar"
        android:layout_above="@+id/firstRow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:text="Dificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/operationButton"
        android:background="@drawable/custombutton"
        android:text="Suma"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/playButton"
        android:background="@drawable/custombutton"
        android:text="Start"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>